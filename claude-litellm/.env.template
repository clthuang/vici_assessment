# Claude-DA Environment Configuration
# Copy this file to .env and fill in your values.
# cp .env.template .env

# Required: Your Anthropic API key
ANTHROPIC_API_KEY=

# Optional: Path to the SQLite database (default: ./demo.db)
# CLAUDE_DA_DB_PATH=./demo.db

# Optional: Claude model to use (default: claude-sonnet-4-5-20250929)
# CLAUDE_DA_MODEL=claude-sonnet-4-5-20250929

# Optional: Maximum agent conversation turns (default: 10)
# CLAUDE_DA_MAX_TURNS=10

# Optional: Maximum spend per session in USD (default: 0.50)
# CLAUDE_DA_MAX_BUDGET_USD=0.50

# Optional: Maximum user input length in characters (default: 10000)
# CLAUDE_DA_INPUT_MAX_CHARS=10000

# Optional: Audit log destination - "stdout", "file", or "both" (default: stdout)
# CLAUDE_DA_LOG_OUTPUT=stdout

# Optional: Path for JSONL audit log file (default: ./claude-da-audit.jsonl)
# CLAUDE_DA_LOG_FILE=./claude-da-audit.jsonl

# Optional: Include full query results in audit output (default: false)
# CLAUDE_DA_LOG_VERBOSE=false
